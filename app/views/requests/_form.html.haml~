= semantic_form_for [@request] do |form|
  
  = form.input :plano, :label => 'Plano'
  = form.input :dataexame, :label => 'Dataexame'
  = form.input :dataentrega, :label => 'Dataentrega'
  = form.input :laudo, :label => 'Laudo'
  = form.input :consultation, :member_label => Proc.new{|c| h(c.paciente.nome +" "+ c.data)}, :label => 'Consultation'
  = form.input :exame, :member_label => :descricao, :label => 'Exame'
  = form.submit 'Salvar'
